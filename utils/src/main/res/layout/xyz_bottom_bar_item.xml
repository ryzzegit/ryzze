<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:paddingLeft="@dimen/bottom_bar_item_side_padding"
    android:paddingTop="@dimen/bottom_bar_item_top_padding"
    android:paddingRight="@dimen/bottom_bar_item_side_padding"
    android:paddingBottom="@dimen/bottom_bar_item_bottom_padding"
    android:translationY="@dimen/bottom_bar_icon_top_margin_inactive"
    tools:layout_width="match_parent"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/xyz_tab_icon"
        android:layout_width="@dimen/bottom_bar_icon_size"
        android:layout_height="@dimen/bottom_bar_icon_size"
        tools:ignore="ContentDescription"
        tools:src="@drawable/bottom_bar_default_icon" />

    <TextView
        android:id="@+id/xyz_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bottom_bar_title_top_margin"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textSize="@dimen/bottom_bar_title_inactive_font_size"
        tools:text="Item title" />


</LinearLayout>